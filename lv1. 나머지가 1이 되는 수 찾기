class Solution {
    public int solution(int n) {
        int answer = 0;
        for(int i=1; i <= n; i++){
            if(n%i==1){
                answer=i;
                break;
            }
        }
        return answer;
    }
}



# 다른 사람 풀이
class Solution {
    public int solution(int n) {
        int answer = 1;

        while(true) {
            if (n%answer==1) break;
            answer++;
        }

        return answer;
    }
}
