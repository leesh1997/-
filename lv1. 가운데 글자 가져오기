class Solution {
    public String solution(String s) {
        String answer = "";
        int idx = s.length() / 2;
        if(s.length() % 2 == 0){
            answer =  s.substring(idx - 1, idx + 1);
        } else {
            answer = s.substring(idx, idx + 1);
        }
        
        
        return answer;
    }
}

// 다른 사람 풀이

class StringExercise{
    String getMiddle(String word){
return word.substring((word.length()-1)/2, word.length()/2 + 1);
    }
