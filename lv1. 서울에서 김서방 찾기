class Solution {
    public String solution(String[] seoul) {
        String answer = "";
        
        for(int x = 0; x < seoul.length; x++){
            if(seoul[x].equals("Kim")){
                answer =  "김서방은 " + (x) + "에 있다";
                break;
            }
        }
        return answer;
    }
}

// 다른 사람 풀이

public class FindKim {
    public String findKim(String[] seoul){
        //x에 김서방의 위치를 저장하세요.
        int x = Arrays.asList(seoul).indexOf("Kim");        
        return "김서방은 "+ x + "에 있다";
    }
